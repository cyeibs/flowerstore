<link rel="stylesheet" href="/stylesheets/catalog.css">
<div class="catalog">
  <h3>Каталог</h3>
  <nav class="navbar navbar-expand-lg navbar-transparent navbar-light navbar-theme-primary mb-4">
    <div class="container position-relative">
        <div class="navbar-collapse collapse" id="navbar-default-primary">
            <div class="navbar-collapse-header">
                <div class="row">
                    <div class="col-6 collapse-brand">
                       <a class="navbar-brand mr-lg-5" href="../../index.html">
                            <img class="navbar-brand-dark" src="../../assets/img/brand/light.svg" alt="pixel logo">
                            <img class="navbar-brand-light" src="../../assets/img/brand/dark.svg" alt="pixel logo">
                        </a>
                    </div>
                    <div class="col-6 collapse-close">
                        <i class="fas fa-times" data-toggle="collapse" role="button"
                            data-target="#navbar-default-primary" aria-controls="navbar-default-primary"
                            aria-expanded="false" aria-label="Toggle navigation"></i>
                    </div>
                </div>
            </div>
            <ul class="navbar-nav navbar-nav-hover align-items-lg-center">  
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link" data-toggle="dropdown" role="button">
                        <i class="fas fa-angle-down nav-link-arrow"></i>
                        <span class="nav-link-inner-text">Цветы</span>
                    </a>
                    <ul class="dropdown-menu">
                        {{#each allCats}}
                        <li><a class="dropdown-item cats-button" name={{this.catName}} href="/catalog/{{this.catName}}">{{this.catName}}</a></li>
                        {{/each}}
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/catalog" class="nav-link">Все букеты</a>
                </li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link" data-toggle="dropdown" role="button">
                        <i class="fas fa-angle-down nav-link-arrow"></i>
                        <span class="nav-link-inner-text">Сортировка</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/catalog/sort/byDesc">Цена: по убыванию</a></li>
                        <li><a class="dropdown-item" href="/catalog/sort/byAsc">Цена: по возрастанию</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="d-flex align-items-center">
            <p class="text-dark mb-0"></p>
            <button class="navbar-toggler ml-2" type="button" data-toggle="collapse"
                data-target="#navbar-default-primary" aria-controls="navbar-default-primary"
                aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
  </nav>
    <div class="row">

      {{#each allFlowers}}

      <div class="col-12 col-md-6" id={{this.id}}>
          <div class="card bg-primary border-light shadow-soft">
              <img src={{this.pic}} class="card-img-top rounded-top" alt="Themesberg office">
              <div class="card-body">
                  <h3 class="h5 card-title mt-3">{{this.fName}}</h3>
                  <p class="card-text">{{this.descr}}</p>
                  <h3 class="h5 card-title mt-3">{{this.price}} р</h3>
                  <a href="#" class="btn btn-primary btn-sm">В корзину</a>
              </div>
          </div>
      </div>

 {{/each}}
    </div>

    

</div>

<script defer src="/js/catalog.js"></script>
